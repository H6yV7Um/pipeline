<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="logStoreDirectory" value="D:\\logs"/>

    <!-- 日志文件  appender定义 -->
    <appender name="pipelineAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logStoreDirectory}/pipeline.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logStoreDirectory}/history/%d{yyyy-MM-dd}.pipeline.%i.log</fileNamePattern>
            <maxHistory>20</maxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d [%thread] %-5level %logger{36} %line - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 日志文件  appender定义 -->
    <appender name="springAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logStoreDirectory}/spring.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logStoreDirectory}/history/%d{yyyy-MM-dd}.spring.%i.log</fileNamePattern>
            <maxHistory>20</maxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d [%thread] %-5level %logger{36} %line - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ciHomeErrorAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <File>${logStoreDirectory}/pipeline_error.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>${logStoreDirectory}/history/cihome_error.log.%i.log</FileNamePattern>
            <MinIndex>1</MinIndex>
            <MaxIndex>13</MaxIndex>
        </rollingPolicy>
        <triggeringPolicy
                class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>50MB</MaxFileSize>
        </triggeringPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%d [%thread] %-5level %logger{36} %line - %msg%n</Pattern>
        </encoder>
    </appender>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %C{0}: %msg%n</Pattern>
        </layout>
    </appender>

    <appender name="ciHomeAccessAppender"
              class="ch.qos.logback.core.rolling.RollingFileAppender">

        <File>${logStoreDirectory}/ciHome_access.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logStoreDirectory}/history/%d{yyyy-MM-dd}.ciHome_access.%i.log
            </fileNamePattern>
            <maxHistory>20</maxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d [%thread] %-5level %logger{36} %line - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.jlu" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="pipelineAppender"/>
        <appender-ref ref="ciHomeErrorAppender"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.springframework">
        <level value="debug"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="springAppender"/>
    </logger>
    <logger name="accseeLog" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="ciHomeAccessAppender"/>
    </logger>

    <!-- ===================================================================== -->
    <!--  Root logger的定义                                                         -->
    <!-- ===================================================================== -->
    <root>
        <level value="ERROR"/>
        <appender-ref ref="pipelineAppender"/>
    </root>
</configuration>